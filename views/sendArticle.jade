extends ../node_modules/jade-bootstrap/_bootstrap
append styles
	// Custom styles for this template
	link(href='/css/offcanvas.css', rel='stylesheet')
block body
	nav.navbar.navbar-fixed-top.navbar-inverse
		.container
			.navbar-header
				button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href='/') Revista Tec
				-if(logued)                
					a.navbar-brand(href='/') #{userName}
				-else
					a.navbar-brand(href="/login") Iniciar Sesión
	.jumbotron
		.container
			.col-xs-offset-2.col-xs-8
				if (mostrarAlert==true)
					.alert.alert-info #{alertMessage} 	
				h3(class="center-text") Agregar un articulo nuevo
				div( class="center-block center-text") 
					form(id="insertForm" role="form" method="post" action="#" enctype="multipart/form-data")
						.form-group
							.input-group
								label( for="autor" class="labelInsert" ) Autor
								input( class="form-control" name="author" type="text" placeholder="Autor" required )
								label( for="title" class="labelInsert") Título
								input( class="form-control" name="title" type="text" placeholder="Titulo" required )
								label( for="content" class="labelInsert") Contenido
								textarea( name="content" class="form-control"  cols="50" rows="25" placeholder="contenido" required )
								label( for="image" class="labelInsert") Subir imagen
								input(type ="file" name="articlePhoto" class="form-control"  placeholder="subir imagen" required)
								span( id=status)
						.form-actions
								button(type="submit" class="btn btn-danger") Agregar articulo

	script(src="http://cdnjs.cloudflare.com/ajax/libs/jquery.form/3.51/jquery.form.min.js")
  
